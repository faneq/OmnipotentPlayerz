<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/fab1"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="142dp"
        android:src="@mipmap/play"
        android:visibility="gone"
        app:backgroundTint="#55e967"
        app:rippleColor="#409a36" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="203dp"
        android:src="@mipmap/change"
        android:visibility="gone"
        app:backgroundTint="#95d1ff"
        app:rippleColor="#6534c7" />

    <LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            app:tabBackground="@color/bg"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="#8A6E6E"
            app:tabMode="scrollable" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/tabLayout"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/share" />
    </RelativeLayout>

        <dog.black.com.blackdog.widget.CustomScrollViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:background="#ffffff" />
    <RelativeLayout
        android:id="@+id/banner_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="3dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/left"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_go_forward"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="3dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/right"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_play"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="3dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/play"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_change"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="3dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/change"
                android:padding="5dp"
                android:layout_marginEnd="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_question"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="3dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/question"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout></RelativeLayout>